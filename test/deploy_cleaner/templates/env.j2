# Environment variables for {{ item.target }}
# [M] - mandatory; [O] - optional
# BASEDIR   [M] should represent root directory to clean files from
# FILEMASK  [M] represents regex pattern for which search will be performed; mandatory for archive and delete, in move mode gets overridden (can be left as an empty string)
# MAXAGE    [M] should be presented in mintues (1440 for 1 day, 2880 for 2 days, etc.), default is 1440
# ACTION    [M] should be set to archive, move or delete, default is archive
# TARGETDIR [O] represents directory where archived files will be put in (nfs for example); if no TARGETDIR set, backups will be put in BASEDIR
# DAYS      [O] represent how much days ago should be moved or archived; default is 1

BASEDIR={{ item.basedir }}
FILEMASK={{ item.filemask }}
MAXAGE={{ item.maxage }}
ACTION={{ item.action }}
{% if item.targetdir is defined %}
TARGETDIR={{ item.targetdir }}
{% endif %}
{% if item.days is defined %}
DAYS={{ item.days }}
{% endif %}
